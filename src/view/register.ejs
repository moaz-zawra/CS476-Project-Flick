<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Flick | Register</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/js/color-scheme.js"></script>
  <script src="/js/status-handler.js"></script>
  <script>
    tailwind.config = window.tailwindConfig;
  </script>
</head>

<body class="p-4 bg-bg-light dark:bg-bg-dark min-h-screen flex flex-col">
  <header class="w-full">
    <%- include('partials/visitor-header') %>
  </header>
  <%- include('partials/status-message') %>

  <main class="flex flex-col-reverse lg:flex-row items-center justify-between mx-auto max-w-6xl px-6 sm:px-12 lg:px-24 p-8 w-full flex-grow space-y-12 lg:space-y-0 lg:gap-x-16">

    <!-- LEFT PANEL -->
    <div class="bg-surface-light dark:bg-surface-dark rounded-xl px-12 py-0 shadow-lg w-full max-w-2xl lg:w-[800px] lg:mr-0 flex flex-col justify-between text-left min-h-[598px] lg:h-[598px]">
      <div class="border-b-2 border-accent-light dark:border-accent-dark pt-5 pb-3 mb-5">
        <h2 class="text-4xl font-bold text-text-light dark:text-text-dark text-center">Master Your Knowledge</h2>
        <h2 class="text-4xl font-bold text-text-light dark:text-text-dark text-center">with Flick</h2>
      </div>
      <p class="text-text-light dark:text-text-dark text-lg flex-grow">
        Flick is your go-to flashcard platform to help you study, memorize, and succeed. Join a growing community of learners.
      </p>
      <ul class="space-y-5 text-lg flex-grow">
        <li class="flex items-center text-text-light dark:text-text-dark">
          <span class="text-green-500 font-bold mr-3">✔</span> Create personalized flashcards in seconds.
        </li>
        <li class="flex items-center text-text-light dark:text-text-dark">
          <span class="text-green-500 font-bold mr-3">✔</span> Study smart with spaced repetition.
        </li>
        <li class="flex items-center text-text-light dark:text-text-dark">
          <span class="text-green-500 font-bold mr-3">✔</span> Track your progress and stay motivated.
        </li>
      </ul>
      <p class="text-text-light dark:text-text-dark italic text-lg text-center flex-grow">
        Join thousands of students already using Flick to achieve their goals.
      </p>
    </div>

    <div class="bg-surface-light dark:bg-surface-dark border-2 border-accent-light dark:border-accent-dark rounded-xl p-6 shadow-lg w-full max-w-md lg:ml-0">
      <div class="border-b-2 border-accent-light dark:border-accent-dark pb-4 mb-6">
        <h2 class="text-2xl font-bold text-text-light dark:text-text-dark text-center mb-1">Create a new account</h2>
        <p class="text-text-light dark:text-text-dark text-center text-sm">Enter your information to get started</p>
      </div>

        <form action="/api/register" method="post" class="space-y-3">
          <!-- USERNAME -->
          <div class="space-y-1">
            <label for="username" class="text-sm text-text-light dark:text-text-dark font-medium block">Username</label>
            <div class="relative">
              <input type="text" id="username" name="username" autocomplete="username"
                placeholder="Type your username here" class="border-2 rounded-lg p-2.5 pr-10 bg-surface-light dark:bg-surface-dark text-text-light dark:text-text-dark
                     focus:border-accent-light dark:focus:border-accent-dark focus:outline-none
                     border-accent-light dark:border-accent-dark w-full" required />
              <!-- Hidden error icon -->
              <span
                class="error-icon hidden absolute top-1/2 right-3 transform -translate-y-1/2 text-red-500 font-bold pointer-events-none">
                !
              </span>
            </div>
          </div>

          <!-- EMAIL -->
          <div class="space-y-1">
            <label for="email" class="text-sm text-text-light dark:text-text-dark font-medium block">Email</label>
            <div class="relative">
              <input type="email" id="email" name="email" autocomplete="email" placeholder="Type your email here" class="border-2 rounded-lg p-2.5 pr-10 bg-surface-light dark:bg-surface-dark text-text-light dark:text-text-dark
                     focus:border-accent-light dark:focus:border-accent-dark focus:outline-none
                     border-accent-light dark:border-accent-dark w-full" required />
              <span
                class="error-icon hidden absolute top-1/2 right-3 transform -translate-y-1/2 text-red-500 font-bold pointer-events-none">
                !
              </span>
            </div>
          </div>

          <!-- PASSWORD -->
          <div class="space-y-1">
            <label for="password" class="text-sm text-text-light dark:text-text-dark font-medium block">Password</label>
            <div class="relative">
              <input type="password" id="password" name="password" autocomplete="new-password"
                placeholder="Type your password here" class="border-2 rounded-lg p-2.5 pr-10 bg-surface-light dark:bg-surface-dark text-text-light dark:text-text-dark
                     focus:border-accent-light dark:focus:border-accent-dark focus:outline-none
                     border-accent-light dark:border-accent-dark w-full" required />
              <span
                class="error-icon hidden absolute top-1/2 right-3 transform -translate-y-1/2 text-red-500 font-bold pointer-events-none">
                !
              </span>
            </div>
            <div id="password-strength" class="text-xs mt-1"></div>
          </div>

          <!-- CONFIRM PASSWORD -->
          <div class="space-y-1">
            <label for="cpassword" class="text-sm text-text-light dark:text-text-dark font-medium block">Confirm
              Password</label>
            <div class="relative">
              <input type="password" id="cpassword" name="cpassword" autocomplete="new-password"
                placeholder="Confirm your password here" class="border-2 rounded-lg p-2.5 pr-10 bg-surface-light dark:bg-surface-dark text-text-light dark:text-text-dark
                     focus:border-accent-light dark:focus:border-accent-dark focus:outline-none
                     border-accent-light dark:border-accent-dark w-full" required />
              <span
                class="error-icon hidden absolute top-1/2 right-3 transform -translate-y-1/2 text-red-500 font-bold pointer-events-none">
                !
              </span>
            </div>
            <span id="password-match" class="text-xs mt-1 block"></span>
          </div>

          <!-- BUTTONS -->
          <div class="space-y-2 pt-2">
            <button type="submit" class="border-2 rounded-lg px-6 py-2.5 bg-main-button-light dark:bg-accent-dark text-text-light dark:text-text-dark
                   font-semibold hover:bg-highlight-light dark:hover:bg-highlight-dark hover:text-text-light dark:hover:text-text-dark
                   transition-all duration-200 transform hover:scale-105 w-full mb-4"
          >
            Register
          </button>
          <button
            type="button"
            class="border-2 rounded-lg px-6 py-2.5 bg-secondary-button-light dark:bg-contrast-dark text-text-light dark:text-text-dark
                   font-semibold hover:bg-highlight-light dark:hover:bg-highlight-dark transition-all duration-200 transform hover:scale-105 w-full mb-4"
            onclick="window.location.href='/login'"
          >
            Already have an account?
          </button>
        </div>
      </form>
    </div>
    

  </main>

    <!-- JAVASCRIPT -->
    <script>
      
      const passwordInput = document.getElementById('password');
      const confirmPasswordInput = document.getElementById('cpassword');
      const passwordStrength = document.getElementById('password-strength');
      const passwordMatch = document.getElementById('password-match');
      const regex = /^(?=.*[A-Z])(?=.*[a-zA-Z0-9]).{8,}$/;

      passwordInput.addEventListener('input', () => {
        const value = passwordInput.value;
        if (regex.test(value)) {
          passwordStrength.textContent = 'Strong password';
          passwordStrength.className = 'text-green-500';
        } else {
          passwordStrength.textContent = 'Weak password';
          passwordStrength.className = 'text-red-500';
        }
      });

      confirmPasswordInput.addEventListener('input', () => {
        if (confirmPasswordInput.value === passwordInput.value) {
          passwordMatch.textContent = '✔ Passwords Match';
          passwordMatch.className = 'text-green-500';
        } else {
          passwordMatch.textContent = '✖ Passwords don\'t Match';
          passwordMatch.className = 'text-red-500';
        }
      });

      
      document.addEventListener('DOMContentLoaded', function () {
        const inputs = document.querySelectorAll('input');

        inputs.forEach(input => {
          
          input.addEventListener('blur', function () {
            const container = this.closest('.relative'); 
            if (!container) return;

            const icon = container.querySelector('.error-icon');

            if (this.value.trim() === '') {
              this.classList.add('border-red-500');
              if (icon) icon.classList.remove('hidden');
            } else {
              this.classList.remove('border-red-500');
              if (icon) icon.classList.add('hidden');
            }
          });

          
          input.addEventListener('focus', function () {
            const container = this.closest('.relative');
            if (!container) return;

            const icon = container.querySelector('.error-icon');

            this.classList.remove('border-red-500');
            if (icon) icon.classList.add('hidden');
          });
        });
      });
    </script>
</body>

</html>