<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flick | View Set</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/color-scheme.js"></script>
    <script src="/js/categories.js"></script>
    <script src="/js/script.js"></script>
    <script src="/js/status-handler.js"></script>
    <script>
        tailwind.config = window.tailwindConfig;
    </script>
    <style>
        /* Custom CSS for the flashcard flip animation */
        .card{
            transform-style: preserve-3d;
            transition: transform 0.6s;
        }
        .card:hover{
            transform: rotateY(180deg);
        }
        .card .front, .card .back{
            backface-visibility: hidden;
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
        }
        .card .back{
            transform: rotateY(180deg);
        }
    </style>
</head>

<body class="p-4 bg-bg-light dark:bg-bg-dark min-h-screen">
<%- include('partials/header') %>
<%- include('partials/status-message') %>

<main>
    <div class="border-2 border-accent-light dark:border-accent-dark bg-surface-light dark:bg-surface-dark rounded-xl w-full max-w-4xl p-6 text-center mx-auto mt-10 shadow-custom transition-all duration-300 hover:shadow-lg">
        <div class="font-mono text-2xl text-text-light dark:text-text-dark mb-4">Set Name: <%= set.setName %></div>
        
        <% if (set.category) { %>
        <div class="font-mono text-lg text-text-light dark:text-text-dark mb-4">
            Category: <span id="category-display"></span>
            <% if (set.subCategory) { %>
            | Subcategory: <span id="subcategory-display"> <%= set.subCategory %> </span>
            <% } %>
        </div>
        <% } %>


        <div class="flex flex-wrap gap-16 items-center justify-center">
            <% if (typeof cards !== 'undefined' && cards && cards.length > 0) { %>
                <% cards.forEach(function(card) { %>
            <div class="w-48 h-72 perspective-1000">
                <div class="relative w-full h-full card">
                    <!--Front Text Display of the Flashcard-->
                    <div class="front bg-yellow-200 dark:bg-purple-900 text-black dark:text-white flex items-center justify-center rounded-lg">
                        <h3 class="text-text-light dark:text-text-dark font-mono font-semibold text-xl mb-2"><%= card.front_text %></h3>
                    </div>
                    <!--Back Text Display of the Flashcard-->
                    <div class="back bg-green-200 dark:bg-teal-900 text-black dark:text-white flex items-center justify-center rounded-lg backface-hidden rotate-y-180 transition-transform duration-500 group-hover:rotate-y-0">
                        <h3 class="text-text-light dark:text-text-dark font-mono font-semibold text-xl mb-2">Answer: </h3>
                        <h3 class="text-text-light dark:text-text-dark font-mono font-semibold text-xl mb-2"><%= card.back_text %></h3>
                    </div>
                </div>
            </div>
                    <% }); %>
            <% } %>
        </div>

            <div class="flex items-center gap-2 mt-4">

                <% if (!shared) { %>
                    <button onclick="window.location.href='/edit_set?setID=<%= set.setID %>'"
                            class="relative group flex items-center justify-center p-1 bg-transparent hover:opacity-80 transition-opacity">
                        <img src="edit.svg" alt="Edit Icon" class="w-6 h-6 invert dark:invert-0">
                        <span class="absolute top-full left-1/2 -translate-x-1/2 mt-1 bg-black text-white text-xs font-semibold px-2 py-1 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap z-10">
                            Edit Set
                        </span>
                    </button>
                <% } %>


                <button onclick="window.location.href='/'"
                        class="border-2 rounded-xl px-8 py-3 bg-contrast-light dark:bg-contrast-dark text-text-light dark:text-text-dark font-bold hover:bg-highlight-light dark:hover:bg-highlight-dark transition-all duration-200 transform hover:scale-105">
                    Back to Dashboard
                </button>
            </div>
        </div>
    </div>
</main>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Store category data locally
        const categoryNames = <%- JSON.stringify(categoryNames) %>;
        
        const category_display = document.getElementById('category-display');
        const category = <%- JSON.stringify(set.category) %>;
        
        // Display category name using the utility function with passed parameter
        category_display.innerText = getCategoryName(category, categoryNames);
    });
</script>

</body>
</html>