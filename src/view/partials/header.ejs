<header>
    <div class="inline font-extrabold text-3xl font-mono">
        <a href="/">
            <span class="text-accent-light dark:text-accent-dark hover:opacity-80 transition-opacity cursor-pointer">
              flick
            </span>
        </a>

        <div id="header-buttons" class="float-right flex items-center gap-3">
            <div class="flex items-center">
                <label for="theme-toggle" class="inline-flex items-center cursor-pointer hover:opacity-80 transition-opacity relative group">
                    <span class="mr-2 text-sm font-medium text-text-light dark:text-text-dark">Light</span>
                    <div class="relative">
                        <input type="checkbox" id="theme-toggle" class="sr-only peer" onclick="toggleTheme()">
                        <div class="w-11 h-6 bg-accent-light peer-focus:ring-4 peer-focus:ring-accent-light dark:peer-focus:ring-accent-dark rounded-full peer dark:bg-surface-dark peer-checked:after:translate-x-full after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-accent-dark"></div>
                    </div>
                    <span class="ml-2 text-sm font-medium text-text-light dark:text-text-dark">Dark</span>
                    <span class="absolute top-full left-1/2 -translate-x-1/2 mt-1 bg-black text-white text-xs font-semibold px-2 py-1 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap z-10">Toggle Theme</span>
                </label>
            </div>

            <div class="flex flex-col gap-1 items-start">
                <!-- Account Button -->
                <% if (currentPage === 'account') { %>
                    <button id="dashboard-button" onclick="window.location.href='/'" class="m-0 p-0 inline-block text-xs text-secondary-light dark:text-secondary-dark hover:text-accent-light dark:hover:text-accent-dark transition-colors">
                        dashboard
                    </button>
                <% } else { %>
                    <button id="account-button" onclick="window.location.href='/account'" class="m-0 p-0 inline-block text-xs text-secondary-light dark:text-secondary-dark hover:text-accent-light dark:hover:text-accent-dark transition-colors">
                        account
                    </button>
                <% } %>

                <button id="run-tests-button" onclick="window.location.href='/test'" class="m-0 p-0 inline-block text-xs text-secondary-light dark:text-secondary-dark hover:text-accent-light dark:hover:text-accent-dark transition-colors">
                    run tests
                </button>

                <form method="post" action="/api/logout" class="inline-flex">
                    <button type="submit" id="logout-button" class="m-0 p-0 inline-block text-xs text-secondary-light dark:text-secondary-dark hover:text-accent-light dark:hover:text-accent-dark transition-colors">
                        logout
                    </button>
                </form>
            </div>
        </div>

        <br />
        <span class="text-accent-light dark:text-accent-dark text-sm italic">your flashcards are a click away!</span>
    </div>

    <hr class="border-accent-light dark:border-accent-dark mt-2">
</header>