<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flick | Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/color-scheme.js"></script>
    <script src="/js/status-handler.js"></script>
    <script>
        tailwind.config = window.tailwindConfig;
    </script>
</head>

<body class="p-4 bg-bg-light dark:bg-bg-dark min-h-screen">
<%- include('partials/header') %>
<%- include('partials/status-message') %>

    <div class="border-2 border-accent-light dark:border-accent-dark bg-surface-light dark:bg-surface-dark rounded-xl w-full max-w-md p-6 text-center mx-auto mt-10 shadow-custom transition-all duration-300 hover:shadow-lg">
        <div class="space-y-4 max-w-sm mx-auto">
            <div class="text-left">
                <span class="text-text-light dark:text-text-dark text-xl font-mono">Username: <b><%=account.username%></b></span>
            </div>
            <div class="text-left">
                <span class="text-text-light dark:text-text-dark text-xl font-mono">Email: <b><%=account.email%></b></span>
            </div>
            <div class="text-left">
                <span class="text-text-light dark:text-text-dark text-xl font-mono">Role: <b><%=account.role%></b></span>
            </div>

            <div class="flex flex-col space-y-4 mt-8">
                <button onclick="openEditAccountModal()"
                        class="border-2 rounded-xl px-8 py-3 bg-main-button-light dark:bg-accent-dark text-text-light dark:text-text-dark font-bold hover:bg-highlight-light dark:hover:bg-highlight-dark transition-all duration-200 transform hover:scale-105 w-full relative group">
                    Edit Account Info
                    <span class="absolute bottom-full left-1/2 -translate-x-1/2 mb-1 bg-black text-white text-xs font-semibold px-2 py-1 rounded-lg opacity-0 group-hover:opacity-100 transition-opacity duration-200 whitespace-nowrap z-10">Edit your account information</span>
                </button>
                <button onclick="window.location.href='/'"
                        class="border-2 rounded-xl px-8 py-3 bg-secondary-button-light dark:bg-contrast-dark text-text-light dark:text-text-dark font-bold hover:bg-highlight-light dark:hover:bg-highlight-dark transition-all duration-200 transform hover:scale-105 w-full">
                    Back to Dashboard
                </button>
            </div>
        </div>
    </div>

    <!-- Edit Account Modal -->
    <div id="edit-account-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
        <div class="bg-surface-light dark:bg-surface-dark p-8 rounded-lg shadow-lg w-1/3 text-center">
            <h2 class="text-lg font-mono text-accent-light dark:text-accent-dark mb-4">Edit Account Info</h2>
            <form id="edit-account-form" action="/api/editUser?_method=PUT" method="post" class="space-y-4">
                <input type="hidden" name="_method" value="PUT">
                <div>
                    <label for="edit-username" class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">Username</label>
                    <input type="text" id="edit-username" name="username" value="<%=account.username%>"
                           class="font-mono py-1.5 px-3 text-text-light dark:text-text-dark border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark placeholder:text-text-light dark:placeholder:text-text-dark w-full" required />
                </div>
                <div>
                    <label for="edit-email" class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">Email</label>
                    <input type="email" id="edit-email" name="email" value="<%=account.email%>"
                           class="font-mono py-1.5 px-3 text-text-light dark:text-text-dark border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark placeholder:text-text-light dark:placeholder:text-text-dark w-full" required />
                </div>
                <div>
                    <input type="hidden" name="oldUsername" value="<%=account.username%>"/>
                    <input type="hidden" name="oldEmail" value="<%=account.email%>"/>
                    <input type="hidden" name="action" value="change_details"/>
                </div>
                <button type="button" onclick="openChangePasswordModal()"
                        class="border-2 rounded-xl px-8 py-3 bg-main-button-light dark:bg-accent-dark text-text-light dark:text-text-dark font-bold hover:bg-highlight-light dark:hover:bg-highlight-dark transition-all duration-200 transform hover:scale-105 w-full">
                    Change Password
                </button>
                <div class="flex justify-around">
                    <button type="button" onclick="document.getElementById('edit-account-modal').classList.add('hidden')"
                            class="bg-secondary-light dark:bg-secondary-dark text-text-light dark:text-text-dark p-2 rounded-md hover:bg-main-button-light dark:hover:bg-accent-dark transition-colors">
                        Cancel
                    </button>
                    <button type="submit"
                            class="bg-highlight-light dark:bg-highlight-dark text-text-light dark:text-text-dark p-2 rounded-md hover:bg-main-button-light dark:hover:bg-accent-dark transition-colors">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Change Password Modal -->
    <div id="change-password-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
        <div class="bg-surface-light dark:bg-surface-dark p-8 rounded-lg shadow-lg w-1/3 text-center">
            <h2 class="text-lg font-mono text-accent-light dark:text-accent-dark mb-4">Change Password</h2>
            <form id="change-password-form" action="/api/editUser?_method=PUT" method="post" class="space-y-4">
                <div>
                    <label for="current-password" class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">Current Password</label>
                    <input type="password" id="current-password" name="current_password"
                           class="font-mono py-1.5 px-3 text-text-light dark:text-text-dark border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark placeholder:text-text-light dark:placeholder:text-text-dark w-full" required />
                </div>
                <div>
                    <label for="new-password" class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">New Password</label>
                    <input type="password" id="new-password" name="new_password"
                           class="font-mono py-1.5 px-3 text-text-light dark:text-text-dark border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark placeholder:text-text-light dark:placeholder:text-text-dark w-full" required />
                </div>
                <div>
                    <label for="confirm-new-password" class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">Confirm New Password</label>
                    <input type="password" id="confirm-new-password" name="confirm_new_password"
                           class="font-mono py-1.5 px-3 text-text-light dark:text-text-dark border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark placeholder:text-text-light dark:placeholder:text-text-dark w-full" required />
                </div>
                <div>
                    <input type="hidden" name="action" value="change_password" />
                    <input type="hidden" name="username" value="<%=account.username%>" />
                    <input type="hidden" name="email" value="<%=account.email%>" />
                </div>
                <div class="flex justify-around">
                    <button type="button" onclick="document.getElementById('change-password-modal').classList.add('hidden'); document.getElementById('edit-account-modal').classList.remove('hidden');"
                            class="bg-secondary-button-light dark:bg-secondary-dark text-text-light dark:text-text-dark p-2 rounded-md hover:bg-accent-light dark:hover:bg-accent-dark transition-colors">
                        Cancel
                    </button>
                    <button type="submit"
                            class="bg-main-button-light dark:bg-highlight-dark text-text-light dark:text-text-dark p-2 rounded-md hover:bg-accent-light dark:hover:bg-accent-dark transition-colors">
                        Save
                    </button>
                </div>
            </form>
        </div>
    </div>

    <script>
        function openEditAccountModal() {
            document.getElementById('edit-username').value = '<%=account.username%>';
            document.getElementById('edit-email').value = '<%=account.email%>';
            document.getElementById('edit-account-modal').classList.remove('hidden');
        }

        function openChangePasswordModal() {
            document.getElementById('change-password-modal').classList.remove('hidden');
            document.getElementById('edit-account-modal').classList.add('hidden');
        }
    </script>
</body>
</html>