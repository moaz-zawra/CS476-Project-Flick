<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Flick | Account</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="/js/color-scheme.js"></script>
    <script src="/js/status-handler.js"></script>
    <script>
        tailwind.config = window.tailwindConfig;
    </script>
</head>

<body class="p-6 bg-bg-light dark:bg-bg-dark min-h-screen flex flex-col">
    <%- include('partials/header') %>
    <%- include('partials/status-message') %>

    <div class="flex flex-col items-center w-full max-w-2xl mx-auto mt-10">
        <div class="bg-surface-light dark:bg-surface-dark border-2 border-accent-light dark:border-accent-dark rounded-xl w-full p-8 shadow-custom transition-all duration-300 hover:shadow-xl text-center">
            <div class="flex flex-col items-center space-y-4">
                <div class="w-24 h-24 rounded-full bg-gray-300 dark:bg-gray-700 flex items-center justify-center text-3xl font-bold text-gray-600 dark:text-gray-300">
                    <%= account.username.charAt(0).toUpperCase() %>
                </div>
                <h1 class="text-2xl font-semibold text-text-light dark:text-text-dark">
                    <%= account.username %>
                </h1>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    <%= account.email %>
                </p>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                    Role: <b><%= account.role %></b>
                </p>
            </div>

            <div class="flex flex-col space-y-4 mt-8">
                <button onclick="openEditAccountModal()" class="border-2 rounded-lg px-6 py-3 bg-main-button-light dark:bg-accent-dark text-text-light dark:text-text-dark font-semibold hover:bg-highlight-light dark:hover:bg-highlight-dark transition-all duration-200 transform hover:scale-105 w-full">
                    Edit Account Info
                </button>
                <button onclick="window.location.href='/'" class="border-2 rounded-lg px-6 py-3 bg-secondary-button-light dark:bg-contrast-dark text-text-light dark:text-text-dark font-semibold hover:bg-highlight-light dark:hover:bg-highlight-dark transition-all duration-200 transform hover:scale-105 w-full">
                    Back to Dashboard
                </button>
            </div>
        </div>
    </div>

    <!-- Edit Account Modal -->
    <div id="edit-account-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
        <div class="bg-surface-light dark:bg-surface-dark p-8 rounded-lg shadow-lg w-1/3 text-center">
            <h2 class="text-lg font-semibold text-accent-light dark:text-accent-dark mb-4">Edit Account Info</h2>
            <form id="edit-account-form" action="/api/editUser?_method=PUT" method="post" class="space-y-4">
                <input type="hidden" name="_method" value="PUT">
                <div>
                    <label for="edit-username" class="block text-left font-semibold text-accent-light dark:text-accent-dark mb-2">Username</label>
                    <input type="text" id="edit-username" name="username" value="<%= account.username %>" class="py-2 px-4 text-text-light dark:text-black border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none w-full" required />
                </div>
                <div>
                    <label for="edit-email" class="block text-left font-semibold text-accent-light dark:text-accent-dark mb-2">Email</label>
                    <input type="email" id="edit-email" name="email" value="<%= account.email %>" class="py-2 px-4 text-text-light dark:text-black border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none w-full" required />
                </div>
                        <div>
                            <input type="hidden" name="oldUsername" value="<%=account.username%>" />
                            <input type="hidden" name="oldEmail" value="<%=account.email%>" />
                            <input type="hidden" name="action" value="change_details" />
                        </div>
                        <button type="button" onclick="openChangePasswordModal()"
                            class="border-2 rounded-xl px-8 py-3 bg-main-button-light dark:bg-accent-dark text-text-light dark:text-text-dark font-bold hover:bg-highlight-light dark:hover:bg-highlight-dark transition-all duration-200 transform hover:scale-105 w-full">
                            Change Password
                        </button>
                        <div class="flex justify-between">
                            <button type="button"
                                onclick="document.getElementById('edit-account-modal').classList.add('hidden')"
                                class="border-2 font-mono font-bold rounded-md p-2 bg-secondary-button-light dark:bg-secondary-button-dark text-text-light dark:text-text-dark hover:bg-highlight-light hover:dark:bg-highlight-dark transition-all duration-200 transform hover:scale-105">
                                Cancel
                            </button>
                            <button type="submit"
                                class="border-2 font-mono font-bold rounded-md p-2 bg-main-button-light dark:bg-main-button-dark text-text-light dark:text-text-dark hover:bg-highlight-light hover:dark:bg-highlight-dark transition-all duration-200 transform hover:scale-105">
                                Save
                        </button>
                </div>
            </form>
        </div>
    </div>

    <div id="change-password-modal"
    class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 hidden">
    <div class="bg-surface-light dark:bg-surface-dark p-8 rounded-lg shadow-lg w-1/3 text-center">
        <h2 class="text-lg font-mono text-accent-light dark:text-accent-dark mb-4">Change Password</h2>
        <form id="change-password-form" action="/api/editUser?_method=PUT" method="post" class="space-y-4">
            <div>
                <label for="current-password"
                    class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">Current
                    Password</label>
                <input type="password" id="current-password" name="current_password"
                    class="font-mono py-1.5 px-3 text-text-light dark:text-text-dark border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark placeholder:text-text-light dark:placeholder:text-text-dark w-full"
                    required />
            </div>
            <div>
                <label for="new-password"
                    class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">New
                    Password</label>
                <input type="password" id="new-password" name="new_password"
                    class="font-mono py-1.5 px-3 text-text-light dark:text-text-dark border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark placeholder:text-text-light dark:placeholder:text-text-dark w-full"
                    required />
            </div>
            <div>
                <label for="confirm-new-password"
                    class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">Confirm
                    New Password</label>
                <input type="password" id="confirm-new-password" name="confirm_new_password"
                    class="font-mono py-1.5 px-3 text-text-light dark:text-text-dark border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark placeholder:text-text-light dark:placeholder:text-text-dark w-full"
                    required />
            </div>
            <div>
                <input type="hidden" name="action" value="change_password" />
                <input type="hidden" name="username" value="<%=account.username%>" />
                <input type="hidden" name="email" value="<%=account.email%>" />
            </div>
            <div class="flex justify-around">
                <button type="button"
                    onclick="document.getElementById('change-password-modal').classList.add('hidden'); document.getElementById('edit-account-modal').classList.remove('hidden');"
                    class="border-2 font-mono font-bold rounded-md p-2 bg-secondary-button-light dark:bg-secondary-button-dark text-text-light dark:text-text-dark hover:bg-highlight-light hover:dark:bg-highlight-dark transition-all duration-200 transform hover:scale-105">
                    Cancel
                </button>
                <button type="submit"
                    class="border-2 font-mono font-bold rounded-md p-2 bg-main-button-light dark:bg-main-button-dark text-text-light dark:text-text-dark hover:bg-highlight-light hover:dark:bg-highlight-dark transition-all duration-200 transform hover:scale-105">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>

    <script>
        function openEditAccountModal() {
            document.getElementById('edit-username').value = '<%= account.username %>';
            document.getElementById('edit-email').value = '<%= account.email %>';
            document.getElementById('edit-account-modal').classList.remove('hidden');
        }
        function openChangePasswordModal() {
                    document.getElementById('change-password-modal').classList.remove('hidden');
                    document.getElementById('edit-account-modal').classList.add('hidden');
        }
    </script>
</body>

</html>