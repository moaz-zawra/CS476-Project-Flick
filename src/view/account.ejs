<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Flick | Account</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="/js/color-scheme.js"></script>
  <script src="/js/status-handler.js"></script>
  <script>
    tailwind.config = window.tailwindConfig;
  </script>
</head>
<body class="p-6 bg-bg-light dark:bg-bg-dark min-h-screen flex flex-col">
  <%- include('partials/header') %>
  <%- include('partials/status-message') %>

  <div class="flex flex-col items-center w-full max-w-2xl mx-auto mt-12">
    <div class="bg-surface-light dark:bg-surface-dark border-2 border-accent-light dark:border-accent-dark rounded-xl w-full p-10 shadow-lg transition-transform duration-300 hover:scale-105">
      <div class="flex flex-col items-center space-y-6">
        <div class="w-24 h-24 rounded-full bg-gray-300 dark:bg-gray-700 flex items-center justify-center text-4xl font-bold text-gray-600 dark:text-gray-300">
          <%= account.username.charAt(0).toUpperCase() %>
        </div>
        <h1 class="text-3xl font-semibold text-text-light dark:text-text-dark">
          <%= account.username %>
        </h1>
        <p class="text-base text-gray-500 dark:text-gray-400">
            Email: <%= account.email %>
        </p>
        <p class="text-base text-gray-500 dark:text-gray-400">
          Role: <span class="font-semibold"><%= account.role %></span>
        </p>
      </div>

      <div class="flex flex-col space-y-4 mt-10">
        <button onclick="openEditAccountModal()"
          class="w-full py-3 px-6 rounded-lg bg-main-button-light dark:bg-accent-dark text-white font-semibold shadow-md hover:shadow-xl transition-all duration-200">
          Edit Account Info
        </button>
        <button onclick="window.location.href='/'"
          class="w-full py-3 px-6 rounded-lg bg-secondary-button-light dark:bg-contrast-dark text-white font-semibold shadow-md hover:shadow-xl transition-all duration-200">
          Back to Dashboard
        </button>
      </div>
    </div>
  </div>

  <!-- Edit Account Modal -->
  <div id="edit-account-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 opacity-0 pointer-events-none transition-opacity duration-300">
    <div class="bg-surface-light dark:bg-surface-dark p-8 rounded-lg shadow-2xl w-full max-w-md transform translate-y-[-20px] transition-all duration-300">
      <h2 class="text-xl font-semibold text-accent-light dark:text-accent-dark mb-6 text-center">Edit Account Info</h2>
      <form id="edit-account-form" action="/api/editUser?_method=PUT" method="post" class="space-y-6">
        <input type="hidden" name="_method" value="PUT" />
        <div>
          <label for="edit-username" class="block text-left font-semibold text-accent-light dark:text-accent-dark mb-2">Username</label>
          <input type="text" id="edit-username" name="username" value="<%= account.username %>" 
            class="w-full py-2 px-4 border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none" required />
        </div>
        <div>
          <label for="edit-email" class="block text-left font-semibold text-accent-light dark:text-accent-dark mb-2">Email</label>
          <input type="email" id="edit-email" name="email" value="<%= account.email %>" 
            class="w-full py-2 px-4 border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none" required />
        </div>
        <div>
          <input type="hidden" name="oldUsername" value="<%= account.username %>" />
          <input type="hidden" name="oldEmail" value="<%= account.email %>" />
          <input type="hidden" name="action" value="change_details" />
        </div>
        <button type="button" onclick="openChangePasswordModal()"
          class="w-full py-3 px-6 rounded-lg bg-main-button-light dark:bg-accent-dark text-white font-bold shadow-md hover:shadow-xl transition-all duration-200">
          Change Password
        </button>
        <div class="flex justify-between mt-4">
          <button type="button"
            onclick="closeEditAccountModal()"
            class="py-2 px-4 rounded-md bg-secondary-button-light dark:bg-secondary-button-dark text-white font-semibold hover:bg-highlight-light hover:dark:bg-highlight-dark transition-all duration-200">
            Cancel
          </button>
          <button type="submit"
            class="py-2 px-4 rounded-md bg-main-button-light dark:bg-main-button-dark text-white font-semibold hover:bg-highlight-light hover:dark:bg-highlight-dark transition-all duration-200">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

  <!-- Change Password Modal -->
  <div id="change-password-modal" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 opacity-0 pointer-events-none transition-opacity duration-300">
    <div class="bg-surface-light dark:bg-surface-dark p-8 rounded-lg shadow-2xl w-full max-w-md transform translate-y-[-20px] transition-all duration-300">
      <h2 class="text-xl font-mono text-accent-light dark:text-accent-dark mb-6 text-center">Change Password</h2>
      <form id="change-password-form" action="/api/editUser?_method=PUT" method="post" class="space-y-6">
        <div>
          <label for="current-password" class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">Current Password</label>
          <input type="password" id="current-password" name="current_password"
            class="w-full py-2 px-3 border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark" required />
        </div>
        <div>
          <label for="new-password" class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">New Password</label>
          <input type="password" id="new-password" name="new_password"
            class="w-full py-2 px-3 border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark" required />
        </div>
        <div>
          <label for="confirm-new-password" class="block text-left font-mono text-accent-light dark:text-accent-dark mb-2">Confirm New Password</label>
          <input type="password" id="confirm-new-password" name="confirm_new_password"
            class="w-full py-2 px-3 border-2 border-accent-light dark:border-accent-dark rounded-lg focus:outline-none shadow-sm bg-surface-light dark:bg-surface-dark" required />
        </div>
        <div>
          <input type="hidden" name="action" value="change_password" />
          <input type="hidden" name="username" value="<%= account.username %>" />
          <input type="hidden" name="email" value="<%= account.email %>" />
        </div>
        <div class="flex justify-between mt-4">
          <button type="button"
            onclick="closeChangePasswordModal()"
            class="py-2 px-4 rounded-md bg-secondary-button-light dark:bg-secondary-button-dark text-white font-semibold hover:bg-highlight-light hover:dark:bg-highlight-dark transition-all duration-200">
            Cancel
          </button>
          <button type="submit"
            class="py-2 px-4 rounded-md bg-main-button-light dark:bg-main-button-dark text-white font-semibold hover:bg-highlight-light hover:dark:bg-highlight-dark transition-all duration-200">
            Save
          </button>
        </div>
      </form>
    </div>
  </div>

  <script>
    // Helper functions for opening/closing modals with smooth transitions
    function openEditAccountModal() {
      document.getElementById('edit-username').value = '<%= account.username %>';
      document.getElementById('edit-email').value = '<%= account.email %>';
      const modal = document.getElementById('edit-account-modal');
      modal.classList.remove('opacity-0', 'pointer-events-none');
      modal.classList.add('opacity-100');
    }
    function closeEditAccountModal() {
      const modal = document.getElementById('edit-account-modal');
      modal.classList.remove('opacity-100');
      modal.classList.add('opacity-0', 'pointer-events-none');
    }
    function openChangePasswordModal() {
      const changeModal = document.getElementById('change-password-modal');
      changeModal.classList.remove('opacity-0', 'pointer-events-none');
      changeModal.classList.add('opacity-100');
      // Optionally hide the edit modal
      closeEditAccountModal();
    }
    function closeChangePasswordModal() {
      const changeModal = document.getElementById('change-password-modal');
      changeModal.classList.remove('opacity-100');
      changeModal.classList.add('opacity-0', 'pointer-events-none');
      // Optionally, show the edit modal again if desired:
      // openEditAccountModal();
    }
  </script>
</body>
</html>
